			<version>${DARWINO_VERSION}</version>
		</dependency>

		<dependency>
			<groupId>com.darwino.demo.react</groupId>
			<artifactId>dwo-demo-react-shared</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.darwino.demo.react</groupId>
			<artifactId>dwo-demo-react-webui</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		
